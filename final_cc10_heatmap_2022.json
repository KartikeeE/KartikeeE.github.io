{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 760,
  "height": 320,
  "data": {
    "url": "https://raw.githubusercontent.com/KartikeeE/KartikeeE.github.io/refs/heads/main/data/cc10_heatmap_2022.json"
  },
  "mark": { "type": "rect" },
  "encoding": {
    "y": {
      "field": "country",
      "type": "nominal",
      "sort": null,
      "title": null
    },
    "x": {
      "field": "variable_label",
      "type": "nominal",
      "sort": [
        "Electricity access (%)",
        "Basic sanitation (%)",
        "Urban population (%)",
        "Out-of-pocket health spend (% of CHE)",
        "Female labour force participation (%)"
      ],
      "title": null,
      "axis": { "labelAngle": -25 }
    },
    "color": {
      "field": "z",
      "type": "quantitative",
      "title": "Standardised value (z-score)"
    },
    "tooltip": [
      { "field": "country", "type": "nominal", "title": "Country" },
      { "field": "variable_label", "type": "nominal", "title": "Indicator" },
      { "field": "z", "type": "quantitative", "title": "Z-score", "format": ".2f" }
    ]
  },
  "config": {
    "view": { "stroke": null },
    "axis": { "grid": true }
  }
}
