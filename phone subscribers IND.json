{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Amount of Phone Subscribers in India from 2009 to 2022",
    "anchor": "start",
    "subtitle": "Source: ODI through ECO API",
    "fontSize": "20",
    "subtitleFontSize": "13",
    "color": "#137152",
    "subtitleColor": "#000000"
  },
  "height": "350",
  "width": "650",
  "autosize": {
    "type": "fit",
    "contains": "padding"
  },
  "background": "#ffffff",
  "view": {
    "fill": "#ffffff",
    "strokeOpacity": 0
  },
  "data": {
    "url": "https://api.economicsobservatory.com/ind/tele?vega",
    "format": {
      "type": "json"
    }
  },
  "mark": {
    "type": "area",
    "color": "#38a883",
    "strokeWidth": "2"
  },
  "encoding": {
    "x": {
      "field": "date",
      "type": "temporal",
      "axis": {
        "title": "Years",
        "titleColor": "#122B39",
        "grid": false
      }
    },
    "y": {
      "field": "value",
      "type": "quantitative",
      "axis": {
        "title": "No. of Phone Subscribers (in Millions)",
        "titleColor": "#122B39",
        "grid": false
      }
    }
  }
}